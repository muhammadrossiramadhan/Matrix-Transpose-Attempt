{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C: Build & Run",
            "type": "shell",
            "command": "gcc -g -Wall '${file}' -o '${fileBasenameNoExtension}' && ./${fileBasenameNoExtension}",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
